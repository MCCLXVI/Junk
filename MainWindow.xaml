<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" 
        Width="800" 
        Height="450"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">

    <Window.Resources>
        <!-- Button Style for rounded corners and custom look -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0">
                            <ContentPresenter Content="{TemplateBinding Content}" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Fill">
        <Grid Width="800" Height="450">
            <!-- Define Columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="228"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Window Border -->
            <Border Background="#3674B5"
                    Grid.ColumnSpan="2"/>

            <!-- Navigation Panel -->
            <Grid Grid.Column="0" HorizontalAlignment="Left" Width="228" Margin="0,0,0,0">
                <Border Background="#578FCA" 
                        CornerRadius="0,0,0,0" />

                <StackPanel Height="448" Width="228" VerticalAlignment="Center">
                    <!-- Title -->
                    <TextBlock Text="Toka Fitness" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="Black" 
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,20"/>

                    <!-- Home Button -->
                    <Button Content="Home" 
                            Width="180" 
                            Height="45" 
                            Margin="10" 
                            Background="#D1F8EF" 
                            Foreground="Black" 
                            BorderThickness="0" 
                            FontFamily="Roboto" 
                            FontSize="14"
                            FontWeight="Bold" 
                            Click="BtnClickHomepage"/>

                    <!-- Social Button -->
                    <Button Content="Social" 
                            Width="180" 
                            Height="45" 
                            Margin="10" 
                            Background="#D1F8EF" 
                            Foreground="Black" 
                            BorderThickness="0" 
                            FontFamily="Roboto"
                            FontSize="14"
                            FontWeight="Bold" 
                            Click="BtnClickSocialpage"/>

                    <!--  About us Button  -->
                    <Button Content="About"
                            Width="180"
                            Height="45"                                                  
                            Margin="10" 
                            Background="#D1F8EF" 
                            Foreground="Black" 
                            BorderThickness="0" 
                            FontFamily="Roboto" 
                            FontSize="14"
                            FontWeight="Bold" 
                            Click="BtnClickAboutpage"/>

                    <!-- Workout and meals Button -->
                    <Button Content="Plans"
                            Width="180"
                            Height="45"
                            Margin="10"
                            Background="#D1F8EF"
                            BorderThickness="0"
                            FontFamily="Roboto"
                            FontSize="14"
                            FontWeight="bold" 
                            Click="BtnClickWorkoutspage" />

                    <!-- Account Mangement Button -->
                    <Button Content="Account" 
                            Width="180" 
                            Height="45" 
                            Margin="10" 
                            Background="#D1F8EF" 
                            Foreground="Black" 
                            BorderThickness="0" 
                            FontFamily="Roboto"
                            FontSize="14"
                            FontWeight="Bold" 
                            Click="BtnClickAccountpage" />
                </StackPanel>
            </Grid>

            <!-- Main Content Frame -->
            <Frame x:Name="Main" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Viewbox>
</Window>