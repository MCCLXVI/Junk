<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="Toka Fitness" 
        Height="450" 
        Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <!-- Button Style for rounded corners and custom look -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0">
                            <ContentPresenter Content="{TemplateBinding Content}" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Define Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="228"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Window Border -->
        <Border Background="#3674B5"
                CornerRadius="20"
                Grid.ColumnSpan="2"/>

        <!-- Navigation Panel -->
        <Grid Grid.Column="0" HorizontalAlignment="Left" Width="228" Margin="0,0,0,0">
            <Border Background="#578FCA" 
                    CornerRadius="20,0,0,20" />

            <StackPanel Height="400" Width="228" VerticalAlignment="Top">
                <!-- Title -->
                <TextBlock Text="Toka Fitness" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="Black" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,20"/>

                <!-- Home Button -->
                <Button Content="Home" 
                        Width="200" 
                        Height="50" 
                        Margin="10" 
                        Background="#D1F8EF" 
                        Foreground="Black" 
                        BorderThickness="0" 
                        FontFamily="Roboto" 
                        FontWeight="Bold" 
                        Click="BtnClickHomepage"/>

                <!-- Social Button -->
                <Button Content="Social" 
                        Width="200" 
                        Height="50" 
                        Margin="10" 
                        Background="#D1F8EF" 
                        Foreground="Black" 
                        BorderThickness="0" 
                        FontFamily="Roboto" 
                        FontWeight="Bold" 
                        Click="BtnClickSocialpage"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Frame -->
        <Frame x:Name="Main" Margin="0,35,0,0" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
