<Window x:Class="Tokafitness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tokafitness"
        mc:Ignorable="d"
        Title="Tokafitness" 
        Height="450" 
        Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="20">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!--// Define Columns //-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="228"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--// The window border //-->
        <Border 
            Background="#3674B5" 
            CornerRadius="20"
            Grid.ColumnSpan="2"/>

        <!--// Navigation Panel //-->
        <Grid Grid.Column="0" HorizontalAlignment="Left" Width="228" Margin="0,0,0,0">
            <Border Background="#578FCA"
                    CornerRadius="20,0,0,20" />

            <StackPanel Height="400" Width="228" VerticalAlignment="Top">
                <!--// Title //-->
                <TextBlock Text="Toka Fitness"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,20"/>
                <!-- Adds spacing below title -->

                <!--// Buttons //-->
                <Button Content="Home"
                     Width="200"
                     Height="50"
                     Margin="10"
                     Background="#D1F8EF"
                     Foreground="Black"
                     BorderThickness="0" 
                     FontFamily="Roboto"
                     FontWeight="Bold" Click="Button_Click"/>

                <Button Content="Dashboard"
                     Width="200"
                     Height="50"
                     Margin="10"
                     Background="#D1F8EF"
                     Foreground="Black"
                     BorderThickness="0" 
                     FontFamily="Roboto"
                     FontWeight="Bold"/>
                
                <Button Content="Workouts"
                     Width="200"
                     Height="50"
                     Margin="10"
                     Background="#D1F8EF"
                     Foreground="black"
                     BorderThickness="0" 
                     FontFamily="Roboto"
                      FontWeight="Bold"/>

                <Button Content="Social"
                     Width="200"
                     Height="50"
                     Margin="10"
                     Background="#D1F8EF"
                     Foreground= "Black"
                     BorderThickness="0" 
                     FontFamily="Roboto"
                     FontWeight="Bold"/>

                <Button Content="Settings"
                     Width="200"
                     Height="50"
                     Margin="10"
                     Background="#D1F8EF"
                     Foreground="Black"
                     BorderThickness="0" 
                     FontFamily="Roboto"
                     FontWeight="Bold"/>   
            </StackPanel>
        </Grid>
    </Grid>
</Window>