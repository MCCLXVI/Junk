<Page x:Class="WpfApp1.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="AccountPage" Height="575">

    <Page.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D1F8EF"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="10,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Hero Section -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Height="100">
            <Grid>
                <Grid Background="#FFFFFF">
                    <StackPanel VerticalAlignment="Center" Margin="10">
                        <TextBlock Text="Account Management" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="Black" Height="45"/>
                        <TextBlock Text="Login or create a new account" 
                                   FontSize="18" 
                                   Foreground="Black" 
                                   Margin="0,10,0,0" Height="37"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Login/Create Account Section -->
        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Login Card -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Height="220" Margin="10,42,10,133">
                <StackPanel Margin="15">
                    <TextBlock Text="Login" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,10"/>
                    <TextBox Name="LoginUsername" 
                             Margin="0,0,0,5" 
                             Padding="10,5" 
                             FontSize="14" 
                             BorderBrush="#D1D1D1" 
                             BorderThickness="1" 
                             Background="#F5F5F5"/>
                    <PasswordBox Name="LoginPassword" 
                                 Margin="0,0,0,10" 
                                 Padding="10,5" 
                                 FontSize="14" 
                                 BorderBrush="#D1D1D1" 
                                 BorderThickness="1" 
                                 Background="#F5F5F5"/>
                    <Button Content="Login" 
                            Style="{StaticResource ActionButtonStyle}" 
                            Width="150" 
                            HorizontalAlignment="Center" 
                            Click="LoginButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Create Account Card -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Height="220" Margin="10,42,10,133">
                <StackPanel Margin="15">
                    <TextBlock Text="Create Account" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,10"/>
                    <TextBox Name="CreateUsername" 
                             Margin="0,0,0,5" 
                             Padding="10,5" 
                             FontSize="14" 
                             BorderBrush="#D1D1D1" 
                             BorderThickness="1" 
                             Background="#F5F5F5"/>
                    <PasswordBox Name="CreatePassword" 
                                 Margin="0,0,0,5" 
                                 Padding="10,5" 
                                 FontSize="14" 
                                 BorderBrush="#D1D1D1" 
                                 BorderThickness="1" 
                                 Background="#F5F5F5"/>
                    <PasswordBox Name="ConfirmPassword" 
                                 Margin="0,0,0,10" 
                                 Padding="10,5" 
                                 FontSize="14" 
                                 BorderBrush="#D1D1D1" 
                                 BorderThickness="1" 
                                 Background="#F5F5F5"/>
                    <Button Content="Create Account" 
                            Style="{StaticResource ActionButtonStyle}" 
                            Width="150" 
                            HorizontalAlignment="Center" 
                            Click="CreateAccountButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>